{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "easytier-manager-pro",
  "version": "3.0.0",
  "identifier": "easytier-manager-pro",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "EasyTier 管理器",
        "width": 1000,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "displayLanguageSelector": true,
        "installMode": "both"
      }
    }
  }
}